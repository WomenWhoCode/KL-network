<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wwckl.projectmiki" >

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.screen.landscape" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_project_miki"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BillSplitterActivity"
            android:label="@string/title_activity_bill_splitter"
            android:parentActivityName=".activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="wwckl.projectmiki.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.WelcomeActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activity.WelcomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="wwckl.projectmiki.activity.WelcomeActivity" />
        </activity>
        <activity android:name=".activity.SettingsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action
                    android:name="activity.SettingsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
